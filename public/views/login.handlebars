<div class="flex-1 flex items-center justify-center bg-gray-100">
  <div class="w-full max-w-md bg-white p-8 rounded shadow-lg border border-gray-200 mx-4">
    <h1 class="text-2xl font-bold text-center text-red-700 mb-6">Iniciar sesión</h1>
    <form id="loginForm" class="space-y-4" method="POST" action="/api/login" onsubmit="return false;">
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
        <input type="email" name="email" required
               class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-red-700 focus:border-transparent" />
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Contraseña</label>
        <input type="password" name="password" required
               class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-red-700 focus:border-transparent" />
      </div>

      <div id="error-message" class="text-red-600 text-sm hidden"></div>

      <button type="submit"
              class="w-full bg-red-700 text-white font-semibold py-2 px-4 rounded hover:bg-red-800 transition">
        Iniciar sesión
      </button>
    </form>
  </div>
</div>

<script src="/js/login.js"></script>
