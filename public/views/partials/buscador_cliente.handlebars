<div class="w-full bg-red-700 text-white py-16 px-6 font-sans text-center">
  <!-- Título principal centrado -->
  <h1 class="text-4xl font-bold mb-6">Buscar cliente</h1>

  <!-- Input de búsqueda centrado -->
  <div class="max-w-xl mx-auto relative">
    <input 
      type="text" 
      id="buscador-cliente" 
      placeholder="Escribe el nombre del cliente..." 
      class="w-full px-4 py-3 rounded-md border border-red-300 shadow-sm text-gray-800 focus:outline-none focus:ring-2 focus:ring-red-300"
    />

    <!-- Lista de sugerencias (inicialmente oculta) -->
    <ul id="sugerencias-clientes"
      class="absolute top-full left-0 w-full mt-2 bg-white text-gray-800 border border-red-300 rounded-md shadow max-h-48 overflow-y-auto hidden z-10">
      <!-- Sugerencias se insertan por JS -->
    </ul>
  </div>
</div>
